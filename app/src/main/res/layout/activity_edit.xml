<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <RelativeLayout
            android:id="@+id/relativeLayoutTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Titre"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginLeft="40dp"
                />

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@+id/editTextTitle"
                android:text="Valider" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/editTextTitle"
                android:text="Annuler" />

            <Spinner
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="100dp"
                android:layout_toRightOf="@+id/editTextTitle"
                android:id="@+id/colorSpinner"
                android:entries="@array/color_array"
                />

            <!--Button
                android:id="@+id/buttonChangeColor"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp"
                android:layout_toRightOf="@+id/editTextTitle"
                android:text="Changer la couleur" /-->

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="130dp"
                android:layout_toRightOf="@+id/editTextTitle"
                android:text="Supprimer" />



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayoutTask"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonNewSubTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/editTextTitle"
                android:text="Ajouter une sous-tÃ¢che" />

            <ListView
                android:id="@+id/listViewSubTask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>

</RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>