<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/titleLayout">
        <TextView
            android:id="@+id/textViewSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titre"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/editTextSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:enabled="false"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/descriptionLayout">
        <TextView
            android:id="@+id/textViewSubDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_weight="2"
            />

        <EditText
            android:id="@+id/editTextSubDescription"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:lines="5"
            android:inputType="textMultiLine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:id="@+id/dateLayout"
        app:layout_constraintTop_toBottomOf="@+id/descriptionLayout"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:id="@+id/textViewSubDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date de fin"
            android:layout_weight="2"
            />

        <EditText
            android:id="@+id/editTextSubDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="jj.mm.aaaa"
            android:inputType="textPersonName" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uploadImageLayout"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/dateLayout">
        <TextView
            android:id="@+id/textViewUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajoutez une image :"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Uploader une image" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/switchFinishedLayout"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/uploadImageLayout"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:id="@+id/textViewSubFinshed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TerminÃ© ?"
            android:layout_weight="1"
            />

        <Switch
            android:id="@+id/switchFinished"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/buttonSubDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Supprimer" />

        <Button
            android:id="@+id/buttonSubCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Annuler" />



        <Button
            android:id="@+id/buttonSubAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ajouter" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>